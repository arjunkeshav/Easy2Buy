<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="235dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="166.7dp"
                android:layout_height="166.1dp"
                app:riv_corner_radius="5dip"
                android:id="@+id/nearbyimg1"
                android:scaleType="centerCrop"
                android:src="@drawable/img1"/>

                <ImageView
                    android:layout_width="17.3dp"
                    android:layout_height="14.5dp"
                    android:src="@drawable/ic_like"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="6.7dp"
                    android:id="@+id/nearbyimg2" />

            </FrameLayout>

            <customfonts.MyTextView_Roboto_Regular
                android:id="@+id/nearbytext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:textAllCaps="true"


                android:text="Product Name"

                android:textColor="#e7a6b10c"
                android:textSize="14.4sp" />
            <LinearLayout

                android:layout_height="18dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="7dp"
                android:background="#10ffffff"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"

                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/rupee"


                     />

            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="47dp"
                android:layout_height="18dp"
                android:text="Price"
                android:textSize="11.5sp"
                android:textColor="#ea1f1f"
                android:id="@+id/nearbytext2"
                android:layout_marginLeft="3dp"

               />
                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="#cc312f2f" />


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_directions_bike_black_24dp"


                    />

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/nearbytext3"
                    android:layout_width="47dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="3dp"
                    android:text="Distance"
                    android:textColor="#ea1f1f"
                    android:textSize="11.5sp"

                    />
        </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="11.dp"
                android:layout_gravity="right">
                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="80dp"
                    android:layout_height="17dp"
                    android:text="Vendor Name"
                    android:textSize="11.5sp"
                    android:textColor="#c1bfbf"
                    android:id="@+id/nearbytext4"
                    android:layout_marginLeft="1dp"
                    />


                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/nearbytext5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2.6dp"
                    android:text="238"
                    android:textColor="#9b9b9b"
                    android:textSize="11.5sp" />
                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="reviews"
                    android:textSize="11.5sp"
                    android:layout_marginLeft="2.6dp"

                    android:textColor="#9b9b9b"/>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>
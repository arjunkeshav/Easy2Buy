<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#781f37"
    android:padding="24dp">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_width="0px"
        android:layout_height="0px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefea"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bkgd_transparent1"
            android:onClick="onClick"
            android:src="@drawable/barrow" />

        <View
            android:layout_width="0.9dp"
            android:layout_height="30.7dp"
            android:layout_marginLeft="10dp"
            android:background="#f5f5f5" />


        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8.7dp"
            android:hint="search here"
            android:textColorHint="#4a4a4a"
            android:textColor="#000000"
            android:textSize="14.4sp" />

        <View
            android:layout_width="0.9dp"
            android:layout_height="30.7dp"
            android:layout_marginLeft="10dp"
            android:background="#f5f5f5" />

        <ImageButton
            android:id="@+id/imgSearch"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bkgd_transparent1"

            android:src="@drawable/ic_search_black_24dp" />


    </LinearLayout>

</LinearLayout>